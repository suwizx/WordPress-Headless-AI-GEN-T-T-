---
import '../styles/global.css';
import PostsPage from '../components/PostsPage';
import { fetchPosts, type WordPressPost } from '../lib/wordpress';

// Fetch posts at build time for SSG
let posts: WordPressPost[] = [];
try {
  const result = await fetchPosts(50); // Fetch up to 50 posts
  posts = result.nodes;
} catch (error) {
  console.error('Error fetching posts for SSG:', error);
  // Fallback to empty array if WordPress is not available during build
  posts = [];
}
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Blog Posts - Astro + React + shadcn/ui</title>
		<meta name="description" content="Discover insights, tutorials, and guides from our WordPress-powered blog." />
	</head>

	<body>
		<PostsPage posts={posts} client:load />
	</body>
</html>
